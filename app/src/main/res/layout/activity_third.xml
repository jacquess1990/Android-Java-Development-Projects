<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:layout_margin="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to the ParQ questionnaire, the imprtant last check before you approach the testing procedure." />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:text="Has your doctor ever said that you have a heart condition and that you should only perform physical activity recommended by a doctor?" />

            <ToggleButton
                android:id="@+id/toggleButtonSt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:singleLine="false"
                android:text="ToggleButton"
                android:textOff="NO"
                android:textOn="YES" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Do you feel pain in your chest when you perform physical activity?" />

            <ToggleButton
                android:id="@+id/toggleButtonSt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:text="ToggleButton"
                android:textOff="NO"
                android:textOn="YES" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="In the past month, have you had chest pain when you were not performing any physical activity? " />

            <ToggleButton
                android:id="@+id/toggleButtonSt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:text="ToggleButton"
                android:textOff="NO"
                android:textOn="YES" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Do you lose your balance because of dizziness or do you ever lose consciousness? " />

            <ToggleButton
                android:id="@+id/toggleButtonSt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:text="ToggleButton"
                android:textOff="NO"
                android:textOn="YES" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Do you have a bone or joint problem that could be made worse by a change in your physical activity? " />

            <ToggleButton
                android:id="@+id/toggleButtonSt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:text="ToggleButton"
                android:textOff="NO"
                android:textOn="YES" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Is your doctor currently prescribing any medication for your blood pressure or for a heart condition? " />

            <ToggleButton
                android:id="@+id/toggleButtonSt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:text="ToggleButton"
                android:textOff="NO"
                android:textOn="YES" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Do you know of any other reason why you should not engage in physical activity? " />

            <ToggleButton
                android:id="@+id/toggleButtonSt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="12dp"
                android:text="ToggleButton"
                android:textOff="NO"
                android:textOn="YES" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textViewMedical"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Medical clearence"
                android:visibility="invisible" />

            <CheckBox
                android:id="@+id/checkBoxMedical"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="Yes"
                android:visibility="invisible" />

            <Button
                android:id="@+id/buttonTest"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="12dp"
                android:text="Test" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>